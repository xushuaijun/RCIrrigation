<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.MainActivity"
    >
    <include
        layout="@layout/title_bar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"/>
    <!-- 主题图片 -->
    <com.xsyj.rcirrigation.customview.SlideShowView
        android:id="@+id/slideshowView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_dam_monitor"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/sy_sktbjk"
                android:gravity="center"
                android:text="水库塘坝监控"
                android:textColor="@color/color_333333"
                android:textSize="15sp"
                android:drawablePadding="8dp"
                />
            <TextView
                android:id="@+id/tv_pumpstation_monitor"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/sy_bzjk"
                android:gravity="center"
                android:text="泵站监控"
                android:textColor="@color/color_333333"
                android:textSize="15sp"
                android:drawablePadding="8dp"/>
            <TextView
                android:id="@+id/tv_pipeline_monitor"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/xxcx_fmkg"
                android:gravity="center"
                android:text="管道监控"
                android:textColor="@color/color_333333"
                android:textSize="15sp"
                android:drawablePadding="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_water_statistic"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/sy_yccz"
                android:gravity="center"
                android:text="水量统计"
                android:textColor="@color/color_333333"
                android:textSize="15sp"
                android:drawablePadding="8dp"
                />
            <TextView
                android:id="@+id/tv_info_search"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/sy_xxcx"
                android:gravity="center"
                android:text="基础信息"
                android:textColor="@color/color_333333"
                android:textSize="15sp"
                android:drawablePadding="8dp"/>
            <TextView
                android:id="@+id/tv_user_center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/sy_grzx"
                android:gravity="center"
                android:text="个人中心"
                android:textColor="@color/color_333333"
                android:textSize="15sp"
                android:drawablePadding="8dp"
                />
            <TextView
                android:id="@+id/tv_remote_imgstamoni"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/sy_ycjkz"
                android:gravity="center"
                android:text="图像站监控"
                android:textColor="@color/color_333333"
                android:textSize="15sp"
                android:drawablePadding="8dp"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
