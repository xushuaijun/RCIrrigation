<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white"

    >

    <com.xsyj.rcirrigation.customview.DragView
        android:id="@+id/pipelineinfo_drag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray">
        <!--下层布局-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/bg_gray"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/btn_pipelineinfo_editer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/dark_gray"
                android:text="编辑"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_20"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_pipelineinfo_del"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_red_light"
                android:text="删除"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_20"
                android:paddingLeft="10dp"
                android:paddingRight="@dimen/dp_10"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pipelineinfo_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="@dimen/dp_10">
                <TextView
                    android:id="@+id/tv_pilelineinfo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title_bg"
                    android:text="2-1"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/cx_zk02"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/bg_xx"
                android:layerType="software"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="5dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_333333"
                        android:text="管道编号："
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/tv_pilelineinfo_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_333333"
                        android:text="--"
                        android:textSize="14sp"
                        />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="5dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_333333"
                        android:text="管道级别："
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/tv_pilelineinfo_gdjb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_333333"
                        android:text="--"
                        android:textSize="14sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_333333"
                        android:text="管道高程(m)："
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/tv_pilelineinfo_gdgc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_333333"
                        android:text="--"
                        android:textSize="14sp"
                        />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="5dp"
               >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_333333"
                        android:text="管底坡降(m)："
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/tv_pilelineinfo_gdpj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_333333"
                        android:text="--"
                        android:textSize="14sp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_333333"
                        android:text="管道直径(m)："
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/tv_pilelineinfo_gdzj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_333333"
                        android:text="--"
                        android:textSize="14sp"
                        />

                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/bg_gray"/>
        </LinearLayout>



    </com.xsyj.rcirrigation.customview.DragView>

</LinearLayout>
