<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:padding="20dp"
    android:layout_margin="10dp"
    >

<RelativeLayout
    android:id="@+id/rl_search_time"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/tv_time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textColor="@color/title_bg"
        android:text="选择时间："
        android:layout_centerVertical="true"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_time_view"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/tv_search_begintime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/color_333333"
            android:text="点击选择时间"
            android:background="@drawable/btn_kz_normal"/>
        <TextView
            android:id="@+id/tv_search_endtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="点击选择时间"
            android:textColor="@color/color_333333"
            android:background="@drawable/btn_kz_normal"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/bg_text_blue"
        android:textColor="@color/white"
        />
</RelativeLayout>



</RelativeLayout>
