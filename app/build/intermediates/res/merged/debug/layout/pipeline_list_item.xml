<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:paddingTop="15dp"
    android:background="@color/white"
    >

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:paddingLeft="10dp"
         android:paddingRight="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:text="管道编号："
            android:textSize="14sp"
            />
           <TextView
               android:id="@+id/tv_pipeline_gdbh"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/color_333333"
               android:text="--"
               android:textSize="14sp"
               />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/color_333333"
               android:text="管道名称："
               android:textSize="14sp"
               />
           <TextView
               android:id="@+id/tv_pipeline_gdmc"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/color_333333"
               android:text="--"
               android:textSize="14sp"
               />
        </LinearLayout>
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="10dp"
         android:paddingLeft="10dp"
         android:paddingRight="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/color_333333"
               android:text="管道等级："
               android:textSize="14sp"
               />
            <TextView
                android:id="@+id/tv_pipeline_gddj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:text="--"
                android:textSize="14sp"
                />
        </LinearLayout>
         <LinearLayout
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/color_333333"
                 android:text="累计水量(m³)："
                 android:textSize="14sp"
                 />
             <TextView
                 android:id="@+id/tv_pipeline_ljsl"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/color_333333"
                 android:text="--"
                 android:textSize="14sp"
                 />
         </LinearLayout>

     </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:text="阀门状态："
                android:textSize="14sp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zmjk_zm01"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:text="设备状态"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:text="--"
                android:textSize="14sp"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:text="上报时间："
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_pipeline_sbsj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:text="--"
                android:textSize="14sp"
                />
        </LinearLayout>


    </LinearLayout>


  <TextView
      android:id="@+id/tv_pipeline_detail"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/color_list_detail"
      android:paddingTop="10dp"
      android:paddingBottom="10dp"
      android:textColor="@color/color_list_detail_text"
      android:text="用水明细"
      android:gravity="center"
      android:textSize="15sp"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/line_gray"/>


</LinearLayout>
